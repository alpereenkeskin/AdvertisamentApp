@model AppUserLoginDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container w-25">
    <h1>Giriş Yap</h1>
    <form asp-action="SignIn" asp-controller="Account">
        <div class="form-group">
            <label asp-for="UserName">Kullanıcı Adı</label>
            <input type="text" class="form-control" asp-for="UserName">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifre</label>
            <input type="password" class="form-control" asp-for="Password">
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">
                Beni Hatırla
            </label>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary">Giriş yap</button>
    </form>
</div>
