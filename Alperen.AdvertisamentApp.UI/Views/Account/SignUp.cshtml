@model UserCreateModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form asp-action="SignUp" asp-controller="Account">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="FirtsName">Adınınız</label>
            <input asp-for="FirtsName" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="LastName">Soyadınız.</label>
            <input asp-for="LastName" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="UserName">Kullanıcı Adınız.</label>
            <input asp-for="UserName" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifre</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Şifre Tekrar</label>
            <input asp-for="ConfirmPassword" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Telefon Numarası</label>
            <input asp-for="PhoneNumber" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="GenderId">Cinsiyet</label>
            <select class="form-select" asp-items="@Model.Genders" name="@nameof(Model.GenderId)">
                <option value="0">Bir Cinsiyet Seçiniz.</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>