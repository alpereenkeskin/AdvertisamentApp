@model List<AdvertisamentListDto>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Tüm İş ilanları</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">İlan Başlığı</th>
                <th scope="col">İlan Açıklaması</th>
                <th scope="col">İlan Durumu</th>
                <th scope="col">İlan Açılış Tarihi</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>@(item.Status ? "Aktif" : "Pasif")</td>
                    <td>@item.CreatedTime</td>
                    <td><a asp-action="Update" asp-route-id="@item.Id" asp-controller="Application" class="btn btn-primary">Güncelle</a><a asp-action="Remove" asp-route-id="@item.Id" asp-controller="Application" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="Application" class="btn btn-success">Yeni Bir İlan Ekle</a>
</div>